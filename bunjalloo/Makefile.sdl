#---------------------------------------------------------------------------------
.SUFFIXES:
#---------------------------------------------------------------------------------

export TARGET		:=	$(shell basename $(CURDIR))
export TOPDIR		:=	$(CURDIR)


#---------------------------------------------------------------------------------
# path to tools - this can be deleted if you set the path in windows
#---------------------------------------------------------------------------------
.PHONY: $(TARGET) arm9/$(TARGET).exe tests

#---------------------------------------------------------------------------------
# main targets
#---------------------------------------------------------------------------------
all: $(TARGET) tests


#---------------------------------------------------------------------------------
$(TARGET)	: arm9/$(TARGET).exe
	cp $< $@

#---------------------------------------------------------------------------------
arm9/$(TARGET).exe:
	$(MAKE) -f Makefile.sdl -C common 
	$(MAKE) -f Makefile.sdl -C arm9 

#---------------------------------------------------------------------------------
clean:
	$(MAKE) -f Makefile.sdl -C arm9 clean
	$(MAKE) -C tests clean
	rm -f $(TARGET)

#---------------------------------------------------------------------------------
tests: $(TARGET)
	$(MAKE) -C $@

# vim: syntax=make
